@model List<Silkways.Models.PanelMenu>
@{
    ViewBag.Title = "Permissions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .setup {
        padding: 50px 0px;
    }

        .setup .logo {
            padding-bottom: 20px;
        }

    ul.cardlist {
        font-size: 0px;
        max-height: 300px;
        overflow-y: scroll;
    }

        ul.cardlist > li {
            margin: 0px;
            padding: 0px;
            width: 50%;
            padding: 0px 5px;
            border-collapse: separate;
        }

            ul.cardlist > li label {
                cursor: pointer;
                margin: 0px;
                padding: 0px;
                border: 1px solid #ddd;
                font-size: 15px;
                display: block;
                line-height: 44px;
                padding: 0px 15px;
                font-weight: normal;
                margin-bottom: 10px;
            }

            ul.cardlist > li input {
                margin-right: 5px;
            }
</style>

<div id="ManageUser">
    <div class="col-xs-9">
        <h2><strong>User Permissions</strong></h2>
    </div>
    <div class="col-xs-3">
        <input type="button" value="Manage Users" style="float:right;" class="btn btn-dark" data-toggle="modal" data-target="#modal-select" onclick="location.href = '/User/ManageUsers'">
    </div>
</div>

<div class="row">
    <div class="col-lg-12 portlets">
        <div class="panel">

            <div class="panel-content">
                @if (Model != null && Model.Count > 0)
                {
                    <form method="post" autocomplete="off" id="frmPanels" enctype="multipart/form-data">
                        <input type="hidden" name="adminuser" value="@ViewBag.UserID" />
                        <input type="hidden" name="selectedpanels" id="txtselectedpanels" value="" />
                        <ul class="list-inline cardlist">
                            @foreach (var item in Model)
                            {
                                <li>
                                    <label><input @(item.IsActive ? "checked='checked'" : "") type="checkbox" class="panelmenu" name="panel" value="@item.ID" />@item.Name</label>
                                </li>
                            }
                        </ul>
                        <div>
                            <hr />
                            <div class="text-right">
                                <a href="/User/ManageUsers" class="btn btn-default">BACK</a> <button type="submit" class="btn btn-primary">SAVE</button>
                            </div>
                        </div>
                    </form>
                }
                else
                {
                    <div class="jumbotron">
                        <h1>No Data !</h1>
                        <p>
                            Kindly add all menu panels in database you created for project under PanelMenu table, So all panels will automatically visible here for selection.
                        </p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

