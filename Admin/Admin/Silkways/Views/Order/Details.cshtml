                                                                <td>@result</td>

                                                                @*<th>Total Price</th>
                    <td>@Convert.ToInt32(Model.TotalPrice)+@Convert.ToInt32(0)</td>*@

                                                            }
                                                            else
                                                            {
                                                                decimal shipping = 150;

                                                                int result = Convert.ToInt32(shipping) + Convert.ToInt32(Model.TotalPrice);

                                                                <th>Total Price</th>
                                                                <td>@result</td>

                                                            }



                                                        }




                                                    </tr>

