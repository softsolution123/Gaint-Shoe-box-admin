                                                        @{


                                                            if (Model.TotalPrice >= 2000)
                                                            {

                                                                <td> 0 </td>

                                                            }
                                                            else if (Model.TotalPrice < 2000)
                                                            {
                                                                <td>150</td>


                                                            }
                                                        }

                                                        @{

                                                            if (Model.TotalPrice >= 2000)
                                                            {

                                                                decimal shipping = 0;

                                                                int result = Convert.ToInt32(shipping) + Convert.ToInt32(Model.TotalPrice);

