
@{
    ViewBag.Title = "Test";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" enctype="multipart/form-data" id="FormUser">
    <div class="row">
        <div class="col-lg-12 portlets">
            <div class="panel">
                <div class="panel-content">
                    <div class="row">
                        <div>
                            <input type="text" name="text" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Select Images</label>
                            <div>
                                <input type="file" id="File1" name="file" multiple class="upload" accept="image/*" />
                            </div>
                            <div>
                                @{
                                    string Text = "Update product";
                                }
                                <br />
                                <input type="submit" id="btnSave" class=" btn btn-dark" value="@Text" name="Save" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
</form>

