@model Silkways.Models.Setting

@{
    ViewBag.Title = "AddSettings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-xs-9">
    <h2>Add <strong>Setting</strong></h2>
</div>
<div class="col-xs-3">
    @*<input type="button" value="Manage Setting" style="float:right;" class="btn btn-dark" data-toggle="modal" data-target="#modal-select" onclick="location.href = '/Settings/ManageSettings'">*@
</div>
<form method="post" enctype="multipart/form-data" id="FormUser">
    @Html.HiddenFor(a => a.ID)
    <div class="row">
        <div class="col-lg-12 portlets">
           
            <div class="panel">
                <div class="panel-content">
                    <h4>Website Contact Information</h4>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input id="hdn_UserID" type="hidden" name="hdn_UserID" />
                                <label class="form-label">Website Title</label>
                                @Html.TextBoxFor(x => x.Title, new { @placeholder = "Enter Title", @class = "form-control", @required = "required" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">Email</label>
                                @Html.TextBoxFor(x => x.Email, new { @placeholder = "Enter Email", @class = "form-control", @required = "required", @type = "email" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">Mobile</label>
                                @Html.TextBoxFor(x => x.Mobile, new { @placeholder = "Enter Mobile", @class = "form-control", @required = "required" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">Phone</label>
                                @Html.TextBoxFor(x => x.Phone, new { @placeholder = "Enter Phone", @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="form-label">Address</label>
                                @Html.TextAreaFor(x => x.Address, new { @placeholder = "Enter Address", @class = "form-control", @required = "required" })
                            </div>
                        </div>
                    </div>
                    <h4>Website Setting</h4>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">HomePage MetatTitle</label>
                                @Html.TextBoxFor(x => x.HomePageMetatTitle, new { @placeholder = "Enter MetaTitle", @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">HomePage MetatKeyword</label>
                                @Html.TextBoxFor(x => x.HomePageMetatKeyword, new { @placeholder = "Enter MetaKeyWord", @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">HomePage MetatDescription</label>
                                @Html.TextBoxFor(x => x.HomePageMetatDescription, new { @placeholder = "Enter MetaDescription", @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">Client ID for (Google Analytics)</label>
                                @Html.TextBoxFor(x => x.Client, new { @placeholder = "Enter ClientID", @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="file" id="file" name="file" />

                        @{
                            if (Model != null)
                            {
                                <img src="@Constants.WebLogos/@Model.WebLogo" height="300" width="400" />
                                <input type="hidden" name="ImageName" value="@Model.WebLogo" />
                            }
                        }
                    </div>
                    <div>
                        @{
                            string Text = "Add Settings";
                            if (Model != null)
                            {
                                Text = "Update Settings";
                            }
                        }

                        <input type="submit" id="btnSave" class=" btn btn-dark" value="@Text" name="Save" />
                    </div>
                </div>

            </div>
        </div>
    </div>

</form>




